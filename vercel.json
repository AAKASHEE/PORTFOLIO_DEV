{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "MONGO_URI": "mongodb+srv://aakashee:vic-ceBsuc@aakashee.yinja.mongodb.net/mydatabase?retryWrites=true&w=majority",
    "CORS_ORIGIN": "https://your-vercel-domain.vercel.app"
  }
}
